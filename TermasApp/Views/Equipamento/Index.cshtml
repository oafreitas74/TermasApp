@model IEnumerable<TermasApp.Models.EquipamentoModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4 class="display-4 text-primary">Lista de Equipamentos</h4>
        </div>
        <div class="col-md-3">
            <br />
        @*    <a asp-action="Create" class="btn btn-primary">Novo Equipamento</a>*@
        </div>
        <div class="col-md-3">
            <br />
            <a asp-action="Create"  class="btn btn-primary">Novo Equipamento</a>
        </div>
    </div>

    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" id="dataTable" style="width:100%">
            <thead>
                <tr>
                    <th>Nome Interno</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Nº Serie</th>
                    <th>Descrição</th>
                    <th>Data Fabrico</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomeInterno</td>
                        <td>@item.Marca</td>
                        <td>@item.Modelo</td>
                        <td>@item.NSerie</td>
                        <td>@item.Descricao</td>
                        <td>@item.DataFabrico</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mx-1"><i class="fas fa-list-alt" title="Detalhes"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-1"><i class="fas fa-pencil-alt" title="Editar"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="fas fa-trash-alt" title="Eliminar"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nâo exitem dados</p>
    }
</div>