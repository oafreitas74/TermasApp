                    <i class="fas fa-reply-all"></i>
                </span>
                <span class="text">Voltar</span>
            </a>
        </div>
    </div>
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NSerie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NSerie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFabrico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFabrico)
        </dd>
    </dl>
</div>

