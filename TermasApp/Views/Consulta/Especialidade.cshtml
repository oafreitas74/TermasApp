@using TermasApp.IRepository
@model TermasApp.Models.TipoModel
@inject IAquistaRepository _aquista

@{
    string aquista = await _aquista.GetNomeAquista(Model.IdAquista);
}
@{
    ViewData["Title"] = "Especialidade";
}


<h1>Escolher a Especialidade</h1>

<h4>@aquista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Especialidade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAquista" />
            <div class="form-group">
                <label asp-for="IdTipo" class="control-label">Especialidade</label>
                <select asp-for="IdTipo" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.Especialidade">
                    <option value="" disabled selected>Escolher...</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light btn-icon-split">
        <span class="icon text-black-50">
            <i class="fas fa-reply-all"></i>
        </span>
        <span class="text">Voltar</span>
    </a>
</div>


