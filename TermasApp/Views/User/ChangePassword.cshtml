@model TermasApp.Models.MudarPasswordModel
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>Mudar a Password</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success" role="alert">
                Password foi mudada com sucesso
            </div>
        }
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordAtual" class="control-label"></label>
                <input asp-for="PasswordAtual" class="form-control" />
                <span asp-validation-for="PasswordAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NovaPassword" class="control-label"></label>
                <input asp-for="NovaPassword" class="form-control" />
                <span asp-validation-for="NovaPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmeNovaPassword" class="control-label"></label>
                <input asp-for="ConfirmeNovaPassword" class="form-control" />
                <span asp-validation-for="ConfirmeNovaPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@ViewBag.IdEmpresa" asp-controller="Home"  asp-action="Index" class="btn btn-light btn-icon-split">
        <span class="icon text-black-50">
            <i class="fas fa-reply-all"></i>
        </span>
        <span class="text">Voltar</span>
    </a>
</div>

