@inject TermasApp.IRepository.IEquipamentoRepository _equipamentoRepository
@{
    var listModel = await _equipamentoRepository.GetAllEquipamentoPreventiva();
}

@{
    ViewData["Title"] = "EditMapa";
}


<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h4 class="display-4 text-primary">Manutenção Preventiva</h4>
        </div>
        <div class="col-md-3">
            <br />

        </div>
    </div>

    <br />

    @if (listModel.Count() > 0)
    {
        <form asp-action="EditMapa">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nome Interno</th>
                    <th>Janeiro</th>
                    <th>Fevereiro</th>
                    <th>Março</th>
                    <th>Abril</th>
                    <th>Maio</th>
                    <th>Junho</th>
                    <th>Julho</th>
                    <th>Agosto</th>
                    <th>Setembro</th>
                    <th>Outubro</th>
                    <th>Novembro</th>
                    <th>Dezembro</th>

                </tr>
            </thead>
            <tbody id="tbody">

                @for(int i = 0; i < listModel.Count(); i++)
                {
                    <tr>
                            <input type="hidden" asp-for="@listModel[i].Id" />
                            <input type="hidden" asp-for="@listModel[i].NomeInterno" />
                            <td><a asp-action="Details" asp-controller="Equipamento" asp-route-id="@listModel[i].Id" title="Detalhes">@listModel[i].NomeInterno</a></td>
                            <th><input asp-for="@listModel[i].Jan." /></th>
                            <th><input asp-for="@listModel[i].Fev." /></th>
                            <th><input asp-for="@listModel[i].Mar." /></th>
                            <th><input asp-for="@listModel[i].Abr." /></th>
                            <th><input asp-for="@listModel[i].Mai." /></th>
                            <th><input asp-for="@listModel[i].Jun." /></th>
                            <th><input asp-for="@listModel[i].Jul." /></th>
                            <th><input asp-for="@listModel[i].Ago." /></th>
                            <th><input asp-for="@listModel[i].Set." /></th>
                            <th><input asp-for="@listModel[i].Out." /></th>
                            <th><input asp-for="@listModel[i].Nov." /></th>
                            <th><input asp-for="@listModel[i].Dez." /></th>
                    </tr>
                }

            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Index" asp-route-ativo="true" class="btn btn-light btn-icon-split">
                <span class="icon text-black-50">
                    <i class="fas fa-reply-all"></i>
                </span>
                <span class="text">Voltar</span>
            </a>
        </div>
    </form>
    }
    else
    {
        <p>Nâo exitem dados</p>
    }
</div>

