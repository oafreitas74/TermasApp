@model TermasApp.Models.TriagemModel
@inject TermasApp.IRepository.IAquistaRepository _aquista

@{
    string aquista = await _aquista.GetNomeAquista(Model.IdAquista);
}

@{
    ViewData["Title"] = "Edit";
}

<h4>Triagem para :</h4>
<h4>@aquista</h4>
<h5>Data: @Model.Data</h5>
<h5>Hora: @Model.Hora</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdAquista" />
            <input type="hidden" asp-for="Hora" />

            <div class="form-group">
                <label asp-for="IdEnfermeiro" class="control-label">Enfermeiro</label>
                <select asp-for="IdEnfermeiro" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.LEnfermeiros">
                    <option value="" disabled selected>Escolher..</option>
                </select>
                <span asp-validation-for="IdEnfermeiro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light btn-icon-split">
        <span class="icon text-black-50">
            <i class="fas fa-reply-all"></i>
        </span>
        <span class="text">Voltar</span>
    </a>
</div>

